  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc --pretty --project tsconfig.json",
    "dockerlint": "dockerlint Dockerfile",
    "eslint": "eslint src --ext ts",
    "eslint:fix": "eslint src --ext ts --fix",
    "start": "node dist/index.js",
    "start-dev": "APP_NAME=shoyu-play APP_ENV=development nodemon --exec node --inspect=0.0.0.0:5858 -r ts-node/register src/index.ts",
    "test": "jest --forceExit --runInBand --ci",
    "test:coverage": "jest --forceExit --runInBand --ci --coverage",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/pino": "^6.3.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dockerlint": "^0.3.9",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "pino-pretty": "^7.1.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "ajv": "^8.6.3",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "ethers": "^5.4.7",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "helmet": "^4.6.0",
    "mongodb": "^3.7.2",
    "pino": "^6.13.3"
  }
}
